<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mccauley.database.SetReminder">

    <Button
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_Back"
        android:background="@drawable/returnico"
        android:layout_x="-3dp"
        android:layout_y="-3dp"
        android:layout_width="30dp"
        android:layout_height="36dp" />


    <Button
        android:id="@+id/btn_Insert"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Insert"
        android:layout_x="1dp"
        android:layout_y="494dp" />

    <ImageView
        android:layout_width="273dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/setareminder"
        android:layout_x="50dp"
        android:layout_y="-1dp"
        android:id="@+id/imageView2" />

    <EditText
        android:layout_width="345dp"
        android:layout_height="314dp"
        android:inputType="textMultiLine|textCapSentences"
        android:layout_x="-4dp"
        android:layout_y="166dp"
        android:id="@+id/et_entry"
        android:autoLink="all"
        android:hint="Entry"
        android:lines="5"
        android:minLines="1"
        android:gravity="top|left"
        android:maxLines="10"
        android:scrollbars="none" />

    <EditText
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_x="-6dp"
        android:layout_y="108dp"
        android:id="@+id/et_time"
        android:hint="Time" />

    <EditText
        android:id="@+id/et_date"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:hint="Date (dd/mm/yy)"
        android:padding="11dp"
        android:layout_below="@+id/et_entry"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_x="-11dp"
        android:layout_y="53dp" />


</AbsoluteLayout>
